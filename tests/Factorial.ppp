program Factorial;

int module fact(int n) {
  if (n <= 1) then {
    return (1);
  }

  return (n * fact(n - 1));
}

int module factIter(int n)
  var int res, i;
{
  res = 1;
  for i = 1 to n do {
    res = res * i;
  }

  return (res);
}

main() {
  write("Factorial recursivo:", fact(6));
  write("Factorial iterativo:", factIter(6));
}